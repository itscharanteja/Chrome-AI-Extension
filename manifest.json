{
  "manifest_version": 3,
  "name": "AI Text Summarizer",
  "version": "1.0",
  "description": "Summarizes selected text from webpages.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
